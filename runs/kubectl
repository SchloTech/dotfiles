#!/usr/bin/env bash

script_dir="$(cd $(dirname "${BASH_SOURCE[0]}") && pwd)"
source "$script_dir/../utils/os_detect.sh"

os=$(detect_os)

if [[ "$os" == "linux" ]]; then
    # Install dependencies
    install_packages curl sudo

    # Download and install kubectl
    curl -LO "https://dl.k8s.io/release/$(curl -L -s https://dl.k8s.io/release/stable.txt)/bin/linux/amd64/kubectl"
    sudo install -o root -g root -m 0755 kubectl /usr/local/bin/kubectl
    rm kubectl
elif [[ "$os" == "macos" ]]; then
    # Install dependencies
    if ! command -v brew &>/dev/null; then
        install_homebrew
    fi

    # Install kubectl
    brew install kubectl
else
    echo "Unsupported operating system"
    exit 1
fi

# Enable zsh completion (idempotent)
if command -v kubectl &>/dev/null; then
    if [ -f "$HOME/.zshrc" ]; then
        if ! grep -q "kubectl completion zsh" "$HOME/.zshrc"; then
            echo 'if command -v kubectl >/dev/null 2>&1; then source <(kubectl completion zsh); fi' >> "$HOME/.zshrc"
            echo "Added kubectl zsh completion to ~/.zshrc"
        fi
        # If an alias 'k' exists, ensure it gets completion too
        if grep -qE "^alias[[:space:]]+k=.*kubectl" "$HOME/.zshrc"; then
            if ! grep -q "compdef __start_kubectl k" "$HOME/.zshrc"; then
                echo 'compdef __start_kubectl k' >> "$HOME/.zshrc"
                echo "Enabled completion for alias 'k'"
            fi
        fi
    fi
fi
